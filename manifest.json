{
    // Referencing https://developer.chrome.com/extensions/manifest

    // Required
    "manifest_version": 2,
    "name": "Heat Seek Tools",
    "version": "1.0",

    // Recommended
    // "default_locale": "en",
    "description": "Configure your Heat Seek sensor using this handy Chrome extension.",
    "icons": {
      "16": "imgs/icons/16.png",
      "48": "imgs/icons/48.png",
      "128":"imgs/icons/128.png"
    },

    // Pick one
    "browser_action": {
      "default_title": "Heat Seek",
      "default_popup": "popup.html"
    },
    // "page_action": {
    //   "default_popup": "index.html"
    // },

    // Optional
    // "background": {
    //   "scripts": ["js/background.js"],
    //   "persistent": false
    // },

    "permissions": ["tabs"],
    "content_security_policy": "script-src 'self' https://code.jquery.com; object-src 'self'"
  }