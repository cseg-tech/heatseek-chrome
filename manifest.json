{
    // Referencing https://developer.chrome.com/extensions/manifest

    // Required
    "manifest_version": 2,
    "name": "Heat Seek Sensor Configuration",
    "version": "1.0",

    // Recommended
    // "default_locale": "en",
    "description": "Configure your Heat Seek sensor using this handy Chrome extension.",
    // "icons": {...},

    // Pick one
    "browser_action": {
      "default_title": "Heat Seek",
      "default_popup": "index.html"
    },
    // "page_action": {
    //   "default_popup": "index.html"
    // },

    // Optional
    "background": {
      "scripts": ["heatseek_popup.js"],
      "persistent": false
    },

    "permissions": ["storage"]
  }